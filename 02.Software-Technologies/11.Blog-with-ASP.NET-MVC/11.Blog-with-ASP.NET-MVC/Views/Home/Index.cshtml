@{
    ViewBag.Title = "Home";
}
@model List<_11.Blog_with_ASP.NET_MVC.Models.Post>

@foreach (var post in Model)
{
    <div class="row">
        <div class="post col-md-6">
            <h2 class="title">@post.Title</h2>
            <div class="about">
                Posted on <i>@post.Date</i>
                @if (post.Author != null)
                    {
                        @:by <i>@post.Author.FullName (@post.Author.UserName)</i>
                    }
                else
                    { 
                        <i>(Anonymous)</i>
                    }
                </div>
                <div class="body">@Html.Raw(post.Body)</div>
        </div>
    </div>
}