@{
    ViewBag.Title = "To Do List";
}
@model List<string>
<h3>TODO Items</h3>

@for (int i = 0; i < Model.Count; i++)
{
    <li>
        @Model[i]
        @Html.ActionLink("[Delete]", "RemoveItem", new { i })
    </li>
}

<form action="/Home/AddItem" method="post">
    <div>Add TODO item:</div>
    <input type="text" name="newItem" autofocus="autofocus" />
    <input type="submit" />
</form>
